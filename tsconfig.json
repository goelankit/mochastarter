{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": [
        "dom",
        "dom.iterable",
        "es6",
        "es2015",
        "es2016",
        "es2017"
      ],
      "forceConsistentCasingInFileNames":true,
      "noImplicitUseStrict": true,
      "noImplicitThis": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "outDir": "./bin",
      "noUnusedLocals": true,
      "declaration": true,
      "skipLibCheck": true,
    },
    // This is not actually used for building but to let the editor know what files use this config
    "include": [
      "**/*.ts",
    ],
    "exclude": [
      "bin"
    ]
  }